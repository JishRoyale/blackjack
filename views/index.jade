extends layout

block content
  div#debugBox
  div#table
    div.card-area.dealer
    div.card-area.player
    div.card-area.split.right
    div#table-center
      img(src="images/logo.png")
      p Dealer must stand on 17 and must draw to 16
      div.button-area
        button#placeholder(disabled) Placeholder
  button#resetButton(style="display:none;") Reset Server
  div.players
    h1 Players
    ul
  div.scores
    p Dealer:
      span.dealer
    p You:
      span.player
  script(src="/javascripts/console.js")
  script(src="/javascripts/card.js")
  script(src="/javascripts/client.js")